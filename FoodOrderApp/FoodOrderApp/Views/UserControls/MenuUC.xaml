<UserControl x:Class="FoodOrderApp.Views.UserControls.MenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FoodOrderApp.Views.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Height="710"
            Width="1120"
            DataContext="{StaticResource ForgotPasswordVM}"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto"
            Background="{x:Null}"
            FontFamily="{DynamicResource MaterialDesignFont}"
            Foreground="{x:Null}">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <!--phần search-->
                <StackPanel Orientation="Vertical" Margin="60 0 60 0">
                    <!--khung search-->
                    <materialDesign:ColorZone
                    Mode="Standard"
                    CornerRadius="25"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                     Height="50" Width="700"
                    HorizontalAlignment="Left">
                        <DockPanel
                        LastChildFill="True"
                        FlowDirection="RightToLeft">
                            <Button
                            Style="{DynamicResource MaterialDesignToolForegroundButton}"
                            Margin="8 -6 8 -6"
                            DockPanel.Dock="Right"
                            Content="{materialDesign:PackIcon Kind=Search}" />
                            <TextBox
                            HorizontalContentAlignment="Right"
                            BorderBrush="Transparent"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            VerticalAlignment="Top"
                            Height="50"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Disabled" />
                        </DockPanel>
                    </materialDesign:ColorZone>
                    <Button
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="160"
                        Height="50"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        ToolTip="MaterialDesignRaisedDarkButton with Round Corners"
                        HorizontalAlignment="Left"
                        Margin="0 20 0 0">
                        <TextBlock
                            Text="Tìm kiếm" />
                    </Button>
                </StackPanel>

                <!--Filter-->
                <ComboBox Height="50" Width="150"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Right"
                          Margin="0 0 200 0"
                          Foreground="Black"
                          Background="Transparent"
                          FontSize="16"
                          materialDesign:HintAssist.Hint="Giá"
                          VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Giá giảm">
                    </ComboBoxItem>
                    <ComboBoxItem Content="Giá tăng">
                    </ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <ScrollViewer Grid.Row="1">
                <StackPanel Margin="20 0">
                    <!--itemcontrol có thuộc tính itemsource để binding-->
                    <ItemsControl x:Name="ViewListProducts">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalAlignment="Bottom" Height="310" Width="200" Margin="20">
                                    <StackPanel Margin="10 20 10 0"
                                        Height="auto">
                                        <!--hình món ăn-->
                                        <Border Width="160"
                                                Height="140"
                                                Margin="0 0 0 0"
                                                CornerRadius="10"
                                                BorderThickness="0,0,0,0"
                                                VerticalAlignment="Top">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Resources/Images/food.jpg" />
                                            </Border.Background>
                                        </Border>
                                        <!--tên món ăn-->
                                        <TextBlock
                                                Margin="5 10 0 10"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                FontSize="16"
                                                Height="auto"
                                                TextWrapping="Wrap"
                                                VerticalAlignment="Center">
                                                bánh mì nướng muối ớt tôm tôtmh
                                        </TextBlock>
                                        <!--số tiền không giảm giá-->
                                        <TextBlock
                                            Margin="10 5"
                                            Foreground="Black"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="100.00$"
                                            VerticalAlignment="Center">
                                        </TextBlock>
                                        <!--số tiền khi giảm giá kèm khung hiện giảm bao nhiêu %-->
                                        <!--khi item có % giảm giá > 0 thì phần này sẽ được visible còn phần trên-->
                                        <!--thì collapsed-->
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Margin="0 10"
                                            Visibility="Collapsed">
                                            <TextBlock
                                                Margin="10 5"
                                                Foreground="Red"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Text="100.00$"
                                                VerticalAlignment="Center">
                                            </TextBlock>
                                            <Border
                                                BorderBrush="Red"
                                                CornerRadius="5"
                                                BorderThickness="1">
                                                <TextBlock
                                                    Margin="5 0"
                                                    Foreground="Red"
                                                    FontSize="12"
                                                    FontWeight="Medium"
                                                    Text="10%"
                                                    VerticalAlignment="Center">
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--bấm thêm vào giỏ hàng-->
                                    <Border Height="30" x:Name="button"
                                        Margin="15 10 15 20"
                                        CornerRadius="10"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        VerticalAlignment="Bottom">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Name="icon" Margin="0 0 0 0" Height="20" Width="30" Kind="CartAdd" VerticalAlignment="Center" ></materialDesign:PackIcon>
                                            <TextBlock x:Name="text"
                                                   Text="Thêm vào giỏ hàng"
                                                   Margin="0"
                                                   VerticalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </Border>
                                    <!--nền đừng quan tâm-->
                                    <Rectangle
                                            Fill="White"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            RadiusY="10"
                                            RadiusX="10"
                                            Panel.ZIndex="-1"
                                            Effect="{StaticResource dropShadow}"
                                            Margin="10">
                                    </Rectangle>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel></WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>