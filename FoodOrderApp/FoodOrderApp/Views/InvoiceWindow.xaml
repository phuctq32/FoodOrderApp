                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ID:" FontSize="12" Margin="5" />
                                    <TextBlock Text="0001" FontSize="12" Margin="5" FontWeight="DemiBold" />
